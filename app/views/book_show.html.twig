{% extends "layout/layout.html.twig" %}

{% block content %}
	<article class="bg-white rounded-2xl shadow-lg mx-auto my-8 p-8 max-w-3xl">

		<h1 class="text-3xl font-bold mb-4">
			{{ book.titre }}
		</h1>

		<div class="space-y-2 text-stone-700 mb-6">
			<p>
				<strong>Auteur :</strong>
				{{ book.prenom }}
				{{ book.nom }}</p>
			<p>
				<strong>Catégorie :</strong>
				{{ book.categorie_nom }}</p>
			<p>
				<strong>Année :</strong>
				{{ book.annee_publication }}</p>
			<p>
				<strong>ISBN :</strong>
				{{ book.isbn }}</p>
			<p>
				<strong>Disponible :</strong>
				{{ book.disponible ? 'Oui' : 'Non' }}
			</p>
		</div>

		<div class="border-t pt-4 text-stone-600 leading-relaxed">
			{{ book.synopsis|raw }}
		</div>

		<a href="/books" class="inline-block mt-6 text-blue-600 hover:underline">
			← Retour à la liste
		</a>

	</article>
{% endblock %}
